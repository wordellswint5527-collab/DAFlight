<configuration>
    <!-- Cấu hình ResourceManager -->
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>localhost</value>
        <description>Hostname của ResourceManager</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.address</name>
        <value>localhost:8032</value>
        <description>Địa chỉ của ResourceManager</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>localhost:8030</value>
        <description>Địa chỉ scheduler của ResourceManager</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>localhost:8031</value>
        <description>Địa chỉ resource tracker của ResourceManager</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.admin.address</name>
        <value>localhost:8033</value>
        <description>Địa chỉ admin của ResourceManager</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>0.0.0.0:8088</value>
        <description>Địa chỉ Web UI của ResourceManager</description>
    </property>
    
    <!-- Cấu hình NodeManager -->
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
        <description>Auxiliary services cho NodeManager</description>
    </property>
    
    <property>
        <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
        <description>Class cho MapReduce shuffle service</description>
    </property>
    
    <!-- Cấu hình memory và CPU -->
    <property>
        <name>yarn.nodemanager.resource.memory-mb</name>
        <value>4096</value>
        <description>Tổng bộ nhớ khả dụng cho containers (MB)</description>
    </property>
    
    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>4096</value>
        <description>Bộ nhớ tối đa cho một container (MB)</description>
    </property>
    
    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>512</value>
        <description>Bộ nhớ tối thiểu cho một container (MB)</description>
    </property>
    
    <property>
        <name>yarn.nodemanager.resource.cpu-vcores</name>
        <value>2</value>
        <description>Số CPU cores khả dụng cho containers</description>
    </property>
    
    <!-- Cấu hình log -->
    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>/opt/hadoop/logs/yarn</value>
        <description>Thư mục lưu log của NodeManager</description>
    </property>
    
    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
        <description>Bật log aggregation</description>
    </property>
    
    <!-- Cấu hình local directories -->
    <property>
        <name>yarn.nodemanager.local-dirs</name>
        <value>/opt/hadoop/yarn/local</value>
        <description>Thư mục local cho NodeManager</description>
    </property>
    
    <!-- Cấu hình Application Timeline Service -->
    <property>
        <name>yarn.timeline-service.enabled</name>
        <value>true</value>
        <description>Bật Timeline Service</description>
    </property>
    
    <property>
        <name>yarn.timeline-service.hostname</name>
        <value>localhost</value>
        <description>Hostname của Timeline Service</description>
    </property>
    
    <property>
        <name>yarn.timeline-service.http-cross-origin.enabled</name>
        <value>true</value>
        <description>Bật CORS cho Timeline Service</description>
    </property>
    
    <property>
        <name>yarn.resourcemanager.system-metrics-publisher.enabled</name>
        <value>true</value>
        <description>Bật system metrics publisher</description>
    </property>
</configuration>

